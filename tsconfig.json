{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*","src/declarations.ts","index.ts"  ],
  "exclude": [
    "_test",
    "node_modules",
    "lib"
  ]
}